<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RouteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_route"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:id="@+id/llroute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/routes" />

                <com.example.salesrep.utils.SRPButton
                    android:id="@+id/btn_add_route"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="Add Route"
                    android:background="@drawable/button_background"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="40dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:textSize="20sp"
                    android:textColor="@color/black" />


                <com.example.salesrep.utils.SRPButton
                    android:id="@+id/btn_view_routes"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="View Routes"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>