<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ViewShopsActivity">


    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="318dp"
        android:layout_height="286dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="108dp"
        android:alpha="0.4"
        android:background="@drawable/shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shops"/>

    <TextView
        android:id="@+id/tv_note1"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="52dp"
        android:text="No shops to show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_shop" />

    <TextView
        android:id="@+id/tv_note2"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="72dp"
        android:text="Please click the + icon below, to add a new shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_shop" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="36dp"
        android:contentDescription="btn_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />


</androidx.constraintlayout.widget.ConstraintLayout>